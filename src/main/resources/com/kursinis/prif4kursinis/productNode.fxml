<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="130.0" prefWidth="494.0" style="-fx-background-color: #333333; -fx-background-radius: 10; -fx-border-color: #555555; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kursinis.prif4kursinis.fxControllers.ProductNodeController">
    <children>
        <!-- Image View for Product Picture -->
        <ImageView fitHeight="110.0" fitWidth="110.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Product Information -->
        <VBox layoutX="130.0" layoutY="10.0" spacing="5">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16;" text="Product name" textFill="WHITE" />
            <Label style="-fx-font-size: 14;" text="Product code" textFill="WHITE" />
            <Label style="-fx-font-size: 14;" text="Price: $xx.xx" textFill="WHITE" />
        </VBox>

        <!-- Action Buttons -->
        <HBox layoutX="130.0" layoutY="100.0" spacing="10">
            <Label style="-fx-font-size: 14;" text="Visible" textFill="WHITE" />
            <Label style="-fx-font-size: 14;" text="Edit" textFill="WHITE" />
            <Label style="-fx-font-size: 14;" text="Delete" textFill="WHITE" />
        </HBox>
    </children>
</AnchorPane>
